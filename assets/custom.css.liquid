/*Custom CSS in Featured Image Section*/
.feature-row__image{
    border-radius: 12px;
}

#shopify-section-feature-row{
    background-color: #f7f7f7;
    padding-top: 60px;
    padding-bottom: 60px;
    text-transform: capitalize;
}

/*CSS for Product Grid in Collection Section*/
#shopify-section-collection{
    background-color: #f7f7f7;
    padding-top: 60px;
    padding-bottom: 60px;
}

@media only screen and (min-width: 750px){
    ul.grid{
        margin: 0 auto;
    }

    ul.grid li.grid__item{
        width: 30%;
        margin: 0 10px;
    }

    ul.grid li.grid__item img, .placeholder-svg{
        border-radius: 12px;
    }
}

/*CSS for Contact Page and Contact Form*/
.div-block-7{
    border-radius: 12px;
}

.contact-form form input, .contact-form form textarea{
    border-radius: 5px;
}

.icon-box{
    display: flex;
    flex-direction: column;
    justify-content: center;
}

/*CSS for Collection Categories Liquid*/

.one-collection .w-col-4{
    width: 40%;
}

.one-collection .w-col-8{
    width: 60%;
    justify-content: center;
}

.one-collection .w-row{
    display: flex;
    justify-content: center;
}

 @media screen and (max-width: 991px){
    .one-collection .w-row{
        display: none;
    }

    .one-collection .mobile{
        display:flex;
        justify-content: center;
    }
}

/*CSS to change behavior of product cards on hover*/

.product-card:hover .product-card__title{
    border-bottom: none;
}

/*CSS for page that lists out all Collections and for collection template page*/

.collections-page{
    padding:0;
    max-width: 100%;
    padding: 0;
}

.collections-page header{
    margin: 0;
    padding: 40px 0;
    background-color: #f7f7f7;
}

.collections-grid{
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    padding: 0 40px;
    column-gap: 20px;
}

 .h4.grid-view-item__title.product-card__title{
    display: flex;
    justify-content: center;
}

.price{
    align-items: center;
}

@media screen and (max-width: 768px){
    .collections-grid{
        grid-template-columns: 75%;
        justify-content: center;
    }
}

.collections-grid .collection-grid-item__title-wrapper:before{
    border-radius: 8px;
}

#Collection{
    padding:0;
    max-width: 100%;
}

#Collection ul.collections-grid{
    margin-top: 0;
    margin-bottom: 0;
    padding-top: 20px;
    background-color: #f7f7f7;
}

#Collection .collections-grid img{
    border-radius: 7px;
}

.collection-hero{
    margin-top: 0;
    margin-bottom: 0;
}

@media only screen and (min-width: 750px){
    .collection-hero{
        margin-top: 0;
        margin-bottom: 0;
    }
}

.filters-toolbar-wrapper{
    margin-bottom: 0;
    padding: 0 55px;
    border-top: solid 2px #e2e1e1;
    border-bottom: solid 1px #e2e1e1;
}

/*CSS for Product Page*/
.return-link-wrapper{
    margin: 50px;
}

.product-template__container .price{
    align-items: flex-start;
}

.product-recommendations__inner li{
    width: 100;
}

@media only screen and (max-width: 768px){
    .product-template__container{
        padding:0 40px;
    }
}

/*CSS for the Cart Page*/

#shopify-section-cart-template a{
    text-decoration: none;
}

#shopify-section-cart-template input[type = "submit"]{
    margin-bottom: 40px;
    border-radius: 15px;
}

#shopify-section-cart-template .cart__product-title:not([disabled]):hover, .cart__product-title:focus{
    border-bottom: none;
}